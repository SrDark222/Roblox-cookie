import robloxpy
from robloxpy import Client
import time
import itertools

# FunÃ§Ã£o para animaÃ§Ã£o RGB no tÃ­tulo
def rgb_animation(text, delay=0.1):
    colors = ['\033[91m', '\033[92m', '\033[94m', '\033[95m', '\033[96m', '\033[93m']
    for color in itertools.cycle(colors):
        print(f'\r{color}{text}', end='')
        time.sleep(delay)

# FunÃ§Ã£o personalizada para entrada
def _input(text):
    print(text, end='')
    return input()

# FunÃ§Ã£o para obter o cookie da conta
def get_cookie():
    return _input('Insira o cookie da conta Roblox: ')

# FunÃ§Ã£o para exibir o ASCII e a introduÃ§Ã£o
